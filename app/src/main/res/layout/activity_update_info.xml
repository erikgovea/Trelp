<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/updateFoodTrucknamebox"
        android:layout_width="272dp"
        android:layout_height="121dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:hint="Food Truck Name:"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateWordbox" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="286dp"
        android:layout_height="109dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:hint="Description:"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateFoodTrucknamebox" />

    <EditText
        android:id="@+id/updateWordbox"
        android:layout_width="337dp"
        android:layout_height="94dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="UPDATE"
        android:inputType="text"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>